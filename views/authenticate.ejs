<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>
    <script src="/reload/reload.js"></script>
    <h1><%= title %></h1>



    <% if (signedin === true) { %>

      <p>Hei <%= first_name %> <%= last_name %>!, du er logget inn.</p>

      <form class="" action="logout" method="post">
        <input type="submit"value="Logg Ut">
      </form>

    <% } else { %>

      <form id = "" class="" action="authenticate" method="post">
        <div>
          <table>
            <tr>
              <td>  <label for="username">Brukernavn: </label> </td>
              <td> <input type="text" id="username" name="username"><br> </td>
            </tr>
            <tr>
              <td> <label for="pass">Passord: </label> </td>
              <td> <input type="password" id="pass" name="pass"><br> </td>
            </tr>
          </table>
        </div>

        <input type="submit" value="Logg Inn">
      </form>

    <% } %>

    <% if (cart) { %>

      <% for (i in cart.items) { %>

         <p> <%= cart.items[i].product.full_name %> </p>

      <% } %>

    <% } %>



  </body>
</html>
